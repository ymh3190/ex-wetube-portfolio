extends layouts/main.pug

block content 
    include partials/error.pug
    .signupcontainer
        form.signupcontainer-form(method="post")
            span 성
            input.signupcontainer-form-lastname(type="text", name="lastName" placeholder="성")
            span 이름
            input.signupcontainer-form-firstname(type="text", name="firstName" placeholder="이름")
            span 이메일
            input.signupcontainer-form-email(type="email", name="email" placeholder="이메일")
            span 비밀번호
            input.signupcontainer-form-password(type="password", name="password" placeholder="비밀번호")
            input.signupcontainer-form-confirm(type="password", name="confirm" placeholder="재입력")
            button.signupcontainer-form-create(type="submit")  생성 
        a.signupcontainer-link(href="/signin") 로그인하러 가기 &rarr;
        include partials/socialNet.pug
